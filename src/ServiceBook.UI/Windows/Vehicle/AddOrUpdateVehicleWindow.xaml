<Window x:Class="ServiceBook.UI.Windows.Vehicle.AddOrUpdateVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Add a new vehicle" Height="450" Width="650" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Make:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" />
        <Label Content="Model:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0" />
        <Label Content="Exact model name:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,100,0,0" />
        <Label Content="VIN number:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,140,0,0" />
        <Label Content="Registration Plate:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,180,0,0" />
        <Label Content="Owner:" HorizontalContentAlignment="Right" FontSize="18" FontWeight="Bold" Foreground="#6438B1" Width="200" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,220,0,0" />

        <TextBox Foreground="#6438B1" FontSize="18" Name="txtMake" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,20,0,0" />
        <TextBox Foreground="#6438B1" FontSize="18" Name="txtModel" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,60,0,0" />
        <TextBox Foreground="#6438B1" FontSize="18" Name="txtExactModelNAme" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,100,0,0" />
        <TextBox Foreground="#6438B1" FontSize="18" Name="txtVIN" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,140,0,0" />
        <TextBox Foreground="#6438B1" FontSize="18" Name="txtRegPlate" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,180,0,0" />
        <ComboBox Foreground="#6438B1" FontSize="18" Name="comboBoxOwner" Width="350" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="230,220,0,0">
        </ComboBox>

        <Button Name="btnClear" Click="BtnClear_Click" Content="Clear" FontSize="22" Width="180" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,320,0,0" />
        <Button Name="btnSubmit" Click="BtnSubmit_Click" Content="Commit" FontSize="22" Width="180" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,320,0,0" />
    </Grid>
</Window>
